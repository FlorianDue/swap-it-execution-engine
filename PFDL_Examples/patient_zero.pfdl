Struct SWAP_Order
    order_id:number
    stand:Stand_Segment
    segments: Light_Segment[]
    number_light_segments: number
End

Struct Stand_Segment
    stand_shape:string
    stand_height:number
    stand_id:string
End

Struct Light_Segment
    color: string
    diameter: number
    segment_id:string
End

Struct Raw_Material
    blanks:Blank[]
    blank_number:number
End

Struct Blank
    blank_type:string
    blank_id: string
    part_id:number
End

Struct ResourceAssignment
    job_resource: string
End

Struct Milling_Capabilities
    test_numeric: number
End

Struct GetPartsFromWarehouse_Capabilities
    test_numeric: number
    test_boolean: boolean
End

Struct Coating_Capabilities
    test_numeric: number
    test_boolean: boolean
    test_string: string
End

